<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity">
    <TextView
        android:layout_width="400dp"
        android:layout_height="50dp"
        android:textSize="24sp"
        android:textStyle="bold"
        android:textAlignment="center"
        android:gravity="center"
        android:text="JSON Demo"
        />

    <LinearLayout
        android:id="@+id/ll_layout"
        android:layout_width="400dp"
        android:layout_height="600dp"
        android:background="#4CAF50"
        android:padding="10dp"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/json_textview1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="25dp"
            android:layout_marginTop="19dp"
            android:text="请输入要查找的城市"
        />
        <EditText
            android:id="@+id/json_editview1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/json_textview1"
            android:layout_marginTop="20dp"
            android:ems="10" >
            <requestFocus />
        </EditText>
        <Button
            android:id="@+id/btn_json_search"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="json_search_city"
            android:text="查找城市信息"/>
        <EditText
            android:id="@+id/json_editview2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/btn_json_search"
            android:layout_marginTop="20dp"
            android:ems="10" >
            <requestFocus />
        </EditText>

    </LinearLayout>

</LinearLayout>

